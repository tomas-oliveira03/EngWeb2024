extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
                h1 Lista de per√≠odos
                    span  
                    a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
                    span  
                    a.w3-btn.w3-round.w3-grey(href="/compositores") Compositores

        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th

                each periodo in periodos
                    tr
                        td
                            a(href=`periodos/${periodo.id}`) #{periodo.nome}
                        td 
                            a(href=`periodos/delete/${periodo.id}`)
                                i [Delete]
                            span  
                            a(href=`periodos/edit/${periodo.id}`)
                                i [Edit]

        footer.w3-container.w3-blue
            h5
                span Generated by EngWeb2024 in #{date} - [
                    a(href='/') Return
                span ]
