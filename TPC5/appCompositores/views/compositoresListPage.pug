extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
                h1 Lista de compositores
                    span  
                    a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
                    span  
                    a.w3-btn.w3-round.w3-grey(href="/periodos") Períodos

        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Período
                    th

                each compositor in compositores
                    tr
                        td
                            a(href=`compositores/${compositor.id}`) #{compositor.nome}
                        td #{compositor.periodo}
                        td 
                            a(href=`compositores/delete/${compositor.id}`)
                                i [Delete]
                            span  
                            a(href=`compositores/edit/${compositor.id}`)
                                i [Edit]

        footer.w3-container.w3-blue
            h5
                span Generated by EngWeb2024 in #{date} - [
                    a(href='/') Return
                span ]
